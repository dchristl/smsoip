<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>de.christl</groupId>
    <artifactId>SMSoIP</artifactId>

    <version>1.2.0</version>
    <packaging>pom</packaging>
    <name>SMSoIP</name>

    <modules>
        <module>core</module>
        <module>supplier</module>
    </modules>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jarsigner-plugin</artifactId>
                <version>1.2</version>
                <executions>
                    <execution>
                        <id>SIGNING</id>
                        <goals>
                            <goal>sign</goal>
                        </goals>
                        <phase>package</phase>
                        <inherited>true</inherited>
                        <configuration>
                            <archiveDirectory/>
                            <includes>
                                <include>target/*-aligned.apk</include>
                            </includes>
                            <keystore>${certificate.store}</keystore>
                            <storepass>${certificate.pass}</storepass>
                            <keypass>${certificate.pass}</keypass>
                            <alias>main_key</alias>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.jayway.maven.plugins.android.generation2</groupId>
                <artifactId>android-maven-plugin</artifactId>
                <version>3.1.1</version>
                <executions>
                    <execution>
                        <id>ALIGN APK</id>
                        <phase>install</phase>
                        <goals>
                            <goal>zipalign</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>UPDATE MANIFEST</id>
                        <goals>
                            <goal>manifest-update</goal>
                        </goals>
                        <configuration>
                            <manifest>
                                <versionName>${project.version}</versionName>
                            </manifest>
                        </configuration>
                    </execution>
                </executions>
                <configuration>
                    <sign>
                        <debug>false</debug>
                    </sign>
                    <androidManifestFile>${project.basedir}/AndroidManifest.xml</androidManifestFile>
                    <assetsDirectory>${project.basedir}/assets</assetsDirectory>
                    <resourceDirectory>${project.basedir}/res</resourceDirectory>
                    <sdk>
                        <path>${jayway.sdk.path}</path>
                        <platform>13</platform>
                    </sdk>
                    <undeployBeforeDeploy>true</undeployBeforeDeploy>
                </configuration>
                <extensions>true</extensions>

            </plugin>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.3</version>
                <executions>
                    <execution>
                        <phase>install</phase>
                        <configuration>
                            <tasks>
                                <copy todir="${output.folder}" flatten="true" overwrite="true">
                                    <fileset dir="${project.basedir}">
                                        <include name="**/*aligned.apk"/>
                                    </fileset>
                                </copy>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.gmaven</groupId>
                <artifactId>gmaven-plugin</artifactId>
                <version>1.4</version>
                <executions>
                    <execution>
                        <phase>install</phase>
                        <goals>
                            <goal>execute</goal>
                        </goals>
                        <id>CONCATENATE STRINGS</id>
                        <configuration>
                            <source><![CDATA[
                                if (project.packaging == 'apk') {
                                def outputFolder = new File(project.properties.getProperty('output.folder') + '/strings')
                                if (project.name == 'SMSoIP-core') {
                                outputFolder.deleteDir();   // create folder if does not exist
                                }
                                outputFolder.mkdir();   // create folder if does not exist
                                File resourceDir = new File(project.basedir.canonicalPath + '/res')
                                println resourceDir.canonicalPath
                                //find all value folders
                                List<File> valuesFolders = resourceDir.listFiles().findAll { it.canonicalPath.contains('values') }
                                valuesFolders.each {
                                    def newFileName =  it.getName()
                                    //here you have values[-langCode]
                                    def concatenatedStringsFile = new File(outputFolder.canonicalPath + '/' + newFileName + '.xml')
                                    it.listFiles().each {
                                        println 'Copying ' + it  + ' to global resource folders'
                                        concatenatedStringsFile.append('<!--String resources for:')
                                        concatenatedStringsFile.append('\n')
                                        concatenatedStringsFile.append('project: ' + project.name)
                                        concatenatedStringsFile.append('\n')
                                        concatenatedStringsFile.append('values folder: ' + newFileName)
                                        concatenatedStringsFile.append('\n')
                                        concatenatedStringsFile.append('fileName: ' + it.getName())
                                        concatenatedStringsFile.append('\n')
                                        concatenatedStringsFile.append('-->')
                                        concatenatedStringsFile.append('\n')
                                        concatenatedStringsFile.append(it.getText('UTF-8'))
                                        concatenatedStringsFile.append('\n')
                                    }
                                }
                                }
                                ]]>
                            </source>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>com.google.android</groupId>
            <artifactId>android</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-core</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.google.android</groupId>
                <artifactId>android</artifactId>
                <version>2.1.2</version>
                <scope>provided</scope>
            </dependency>
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>4.8.1</version>
            </dependency>
            <dependency>
                <groupId>org.mockito</groupId>
                <artifactId>mockito-core</artifactId>
                <version>1.9.0</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
</project>
