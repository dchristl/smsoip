<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/scrollbarContactsTable"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
        >
    <TableLayout android:id="@+id/chosencontactstable"
                 android:layout_height="wrap_content"
                 android:layout_width="fill_parent"
                 android:shrinkColumns="1,2"
            >

        <TableRow android:id="@+id/heading" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:padding="5dp"
                      android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium" android:text=""
                      android:background="@android:color/darker_gray">

            </TextView>
            <TextView android:padding="5dp" android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:text="@string/name_heading" android:gravity="center"
                      android:background="@android:color/darker_gray"
                    >

            </TextView>
            <TextView android:padding="5dp" android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:text="@string/number_heading"
                      android:gravity="center"
                      android:background="@android:color/darker_gray">

            </TextView>
            <TextView android:padding="5dp"
                      android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium" android:text=""
                      android:background="@android:color/darker_gray">

            </TextView>

        </TableRow>

    </TableLayout>
</ScrollView>
