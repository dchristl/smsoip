<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/scrollbarlastMessagesTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/clippedbitmap_very_small"
        >
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp"
            >
        <TextView android:text="@string/text_lastMessage"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textStyle="bold"
                  android:gravity="center"
                  android:textColor="#C0C0F0"
                  android:textSize="20dp"
                />
        <TextView android:id="@+id/contact"
                  android:textColor="#C0F0C0"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingTop="5dp"
                  android:paddingLeft="5dp"
                  android:paddingRight="5dp"
                />
        <TextView android:id="@+id/clickToAdd"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingBottom="5dp"
                  android:text="@string/text_clickToAdd"
                  android:textSize="10dp"
                />
        <TextView android:id="@+id/message"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingTop="5dp"
                  android:textColor="#F0EC6F"
                />
        <TextView android:text="@string/text_lastConversation"
                  android:id="@+id/lastConversation"
                  android:textStyle="bold"
                  android:textColor="#C0C0F0"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="5dp"
                  android:textSize="20dp"
                />
        <LinearLayout
                android:id="@+id/conversationLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

        </LinearLayout>
    </LinearLayout>
</ScrollView>